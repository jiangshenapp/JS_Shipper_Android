<?xml version="1.0" encoding="utf-8"?>
<com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="74dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:contentView="@+id/content"
    app:rightMenuView="@+id/right"
    android:layout_marginBottom="0.5dp"
    >


    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/item_member_img"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                >

                <TextView
                    android:id="@+id/item_member_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="张***"
                    android:textColor="@color/_000000"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    />

                <TextView
                    android:id="@+id/item_member_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="(待审核）"
                    android:textColor="#FFECA73F"
                    android:textSize="12sp"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/item_member_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="10dp"
                android:text="备注：我的xxxx"
                android:textColor="@color/_6E6E64"
                android:textSize="14sp"
                />


        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/item_agree"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="同意"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:gravity="center"
            android:background="@color/_ECA73F"
            />

        <TextView
            android:id="@+id/item_refuse"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="拒绝"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:background="@color/_D0021B"
            />

        <TextView
            android:id="@+id/item_delete"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="删除"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:background="@color/_D0021B"
            />

    </LinearLayout>


</com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout>