<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minHeight="130dp"
    android:orientation="vertical"
    android:paddingStart="12dp"
    android:paddingEnd="12dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/social_circle_icon_green"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="名字"
            android:textColor="@color/_000000"
            android:textSize="14sp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="6dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1小时前"
            android:textColor="@color/_b4b4b4"
            android:textSize="12sp"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="圈子第一条信息显示，圈子第一条信息显示，圈子第一条信息显示，圈子第一条信息显示…"
        android:textColor="@color/_6E6E64"
        android:textSize="14sp"
        android:maxLines="2"
        android:layout_marginTop="12dp"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="精品"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:background="@color/_D0021B"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:textColor="@color/_b4b4b4"
            android:textSize="12sp"
            android:layout_marginEnd="16dp"
            android:drawableStart="@mipmap/app_navigationbar_fabulous_unclicked"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/item_index_comment"
            />

        <TextView
            android:id="@+id/item_index_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:textColor="@color/_b4b4b4"
            android:textSize="12sp"
            android:drawableStart="@mipmap/app_navigationbar_comment"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>




</LinearLayout>