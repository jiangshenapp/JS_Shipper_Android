<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="实名认证"
        android:textColor="@color/_000000"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="28dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="完成身份认证后可使用更多功能,接单、拔打电
话等再无限制。"
        android:textColor="@color/_B4B4B4"
        android:layout_marginTop="6dp"
        android:layout_marginStart="28dp"
        />


    <LinearLayout
        android:id="@+id/driver_verified_layout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/shape_auth_item"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="30dp"
        >


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_authentication_drivercertification"
            android:layout_marginStart="20dp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="司机认证"
            android:textColor="@color/_000000"
            android:textSize="17sp"
            android:layout_marginStart="16dp"
            />

        <TextView
            android:id="@+id/driver_verified_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未提交"
            android:textColor="@color/_B4B4B4"
            android:textSize="14sp"
            android:layout_marginEnd="6dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_list_arrow_black"
            android:layout_marginEnd="10dp"
            />


    </LinearLayout>



    <LinearLayout
        android:id="@+id/park_verified_layout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/shape_auth_item"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="20dp"
        >


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_authentication_park"
            android:layout_marginStart="20dp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="园区成员认证"
            android:textColor="@color/_000000"
            android:textSize="17sp"
            android:layout_marginStart="16dp"
            />

        <TextView
            android:id="@+id/park_verified_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未提交"
            android:textColor="@color/_B4B4B4"
            android:textSize="14sp"
            android:layout_marginEnd="6dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_list_arrow_black"
            android:layout_marginEnd="10dp"
            />


    </LinearLayout>


</LinearLayout>