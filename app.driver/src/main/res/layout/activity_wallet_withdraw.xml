<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/shape_wallet_input_money">

            <EditText
                android:id="@+id/withdraw_money"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="输入充值金额"
                android:paddingStart="10dp"
                android:textColor="@color/_B4B4B4"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textColor="@color/_ECA73F"
                android:textSize="14sp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <TextView
            android:id="@+id/withdraw_money_max"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="当前最大提现金额：888元"
            android:textColor="@color/_ECA73F"
            android:textSize="12sp"
            android:layout_marginStart="18dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_alipay_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:background="@color/white">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:src="@mipmap/ic_wallet_payment_alipay" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:text="支付宝"
            android:textColor="@color/_000000"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/item_alipay_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="12dp"
            android:src="@mipmap/ic_checkbox_selected" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_alipay_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="94dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:text="账户："
                android:textColor="@color/_000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/alipay_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="请输入支付宝账户"
                android:textColorHint="@color/_B4B4B4"
                android:textSize="14sp"
                android:layout_marginStart="5dp"
                android:background="@null" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/_F0F0F0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="94dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:text="姓名："
                android:textColor="@color/_000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/alipay_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="请输入支付宝账户姓名"
                android:textColorHint="@color/_B4B4B4"
                android:textSize="14sp"
                android:layout_marginStart="5dp"
                android:background="@null" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_wx_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:src="@mipmap/ic_wallet_payment_weixin" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:text="微信"
            android:textColor="@color/_000000"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/item_wx_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="12dp"
            android:src="@mipmap/ic_checkbox_default" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_bank_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:background="@color/white">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:src="@mipmap/ic_pay_unionpay" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:text="银行卡"
            android:textColor="@color/_000000"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/item_balance_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="12dp"
            android:src="@mipmap/ic_checkbox_default" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_bank_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="94dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:text="卡号："
                android:textColor="@color/_000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/bank_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="请输入卡号"
                android:textColorHint="@color/_B4B4B4"
                android:textSize="14sp"
                android:layout_marginStart="5dp"
                android:background="@null" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/_F0F0F0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="94dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:text="开户行："
                android:textColor="@color/_000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/bank_opening"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="请输入开户行"
                android:textColorHint="@color/_B4B4B4"
                android:textSize="14sp"
                android:layout_marginStart="5dp"
                android:background="@null" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/_F0F0F0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="94dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:text="支行："
                android:textColor="@color/_000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/bank_sub"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="请输入支行"
                android:textColorHint="@color/_B4B4B4"
                android:textSize="14sp"
                android:layout_marginStart="5dp"
                android:background="@null" />

        </LinearLayout>
        
    </LinearLayout>

    <TextView
        android:id="@+id/wallet_withdraw"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:text="申请提现"
        android:textColor="@color/_FFFFFF"
        android:textSize="17sp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_btn_eca73f" />

</LinearLayout>