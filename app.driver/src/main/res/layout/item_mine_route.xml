<?xml version="1.0" encoding="utf-8"?>
<com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    app:contentView="@+id/content"
    app:rightMenuView="@+id/right">

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="3dp"
                    android:src="@mipmap/ic_waybill_start" />

                <TextView
                    android:id="@+id/item_route_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="北京/宁波"
                    android:singleLine="true"
                    android:textColor="@color/_000000"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="10dp"
                    android:src="@mipmap/ic_home_going" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="3dp"
                    android:src="@mipmap/ic_waybill_end" />

                <TextView
                    android:id="@+id/item_route_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="宁波/杭州"
                    android:singleLine="true"
                    android:textColor="@color/_000000"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_route_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="精品  "
                    android:textColor="@color/_D0021B"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/item_route_desc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="11.7米/5米  面包车"
                    android:textColor="@color/_B4B4B4"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:src="@mipmap/ic_list_arrow_black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/right"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_route_edit"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/_4A90E2"
            android:textColor="@color/white"
            android:text="编辑"
            android:gravity="center"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/item_route_delete"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/_D0021B"
            android:textColor="@color/white"
            android:text="删除"
            android:gravity="center"
            android:layout_gravity="center"
            />
    </LinearLayout>

</com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout>