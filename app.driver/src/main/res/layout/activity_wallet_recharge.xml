<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/shape_wallet_input_money">

            <EditText
                android:id="@+id/recharge_money"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="输入充值金额"
                android:textColorHint="@color/_B4B4B4"
                android:textSize="14sp"
                android:background="@null"
                android:paddingStart="10dp"
                android:inputType="numberDecimal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textColor="@color/_ECA73F"
                android:textSize="14sp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/wallet_recharge"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:text="立即充值"
        android:textColor="@color/_FFFFFF"
        android:textSize="17sp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_btn_eca73f" />

</LinearLayout>