<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:minHeight="120dp"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_send_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/_000000"
                android:textSize="17sp"
                android:fontFamily="sans-serif-medium"
                />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_home_going"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:id="@+id/item_arrive_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/_000000"
                android:textSize="17sp"
                android:fontFamily="sans-serif-medium"
                />

        </LinearLayout>


        <TextView
            android:id="@+id/item_driver_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/_000000"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/item_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/_ECA73F"
            android:textSize="14sp"
            android:layout_marginTop="18dp"
            android:fontFamily="sans-serif-medium"
            />


    </LinearLayout>


    <TextView
        android:id="@+id/item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/_B4B4B4"
        android:textSize="12sp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_home_phone"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:src="@mipmap/ic_home_chat"
            />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>