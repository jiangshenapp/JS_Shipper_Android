<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/_FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            app:srcCompat="@mipmap/ic_navigationbar_close_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="评价"
            android:textAlignment="center"
            android:textColor="@color/_000000"
            android:textSize="17sp" />
    </LinearLayout>

    <com.js.shipper.widget.view.RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="45dp"
        android:gravity="center_horizontal"
        app:starEmpty="@mipmap/ic_star_normal"
        app:starFill="@mipmap/ic_star_select"
        app:starImageSize="40dp"
        app:starPadding="20dp"
        app:starCount="5"
        app:starStep="5">
    </com.js.shipper.widget.view.RatingBar>

    <TextView
        android:id="@+id/btn_commit"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="49dp"
        android:background="@drawable/shape_btn_eca73f"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/_FFFFFF"
        android:textSize="17sp" />
</LinearLayout>