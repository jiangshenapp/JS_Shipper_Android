<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:minHeight="140dp"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_car_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="浙B766811（北京到宁波）"
                android:textColor="@color/_000000"
                android:textSize="17sp"
                android:fontFamily="sans-serif-medium"
                />

            <TextView
                android:id="@+id/item_cooperation"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:fontFamily="sans-serif-medium"
                android:text="合作过"
                android:textColor="@color/_ECA73F"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/item_driver_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张女士 13306618199"
            android:textColor="@color/_666666"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/item_car_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车型：板车  车长：5.0-9.6米"
            android:textColor="@color/_666666"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/item_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注：长沙到宁波"
            android:textColor="@color/_000000"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <ImageView
            android:id="@+id/item_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_home_phone" />

        <TextView
            android:id="@+id/item_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="12dp"
            android:background="@drawable/shape_wallet_info_control"
            android:paddingStart="20dp"
            android:paddingTop="6dp"
            android:paddingEnd="20dp"
            android:paddingBottom="6dp"
            android:text="下单"
            android:textColor="@color/_000000"
            android:textSize="14sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>