<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.js.shipper">


    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>

    <!--允许程序获取网络状态-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--允许程序访问WiFi网络信息-->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!--允许程序读写手机状态和身份-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!--允许程序访问CellID或WiFi热点来获取粗略的位置-->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name="com.js.shipper.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">


        <meta-data
            android:name="com.amap.api.v2.apikey"
            android:value="c4c4a4f436489de383f7a832452239f6"/>


        <activity android:name="com.js.shipper.ui.main.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.js.shipper.ui.user.activity.LoginActivity"
            android:launchMode="singleTask" />

        <activity
            android:name="com.js.shipper.ui.user.activity.RegisterActivity"
            android:launchMode="singleTop" />

        <activity
            android:name="com.js.shipper.ui.user.activity.UserCenterActivity"
            android:launchMode="singleTop" />

        <activity
            android:name="com.js.shipper.ui.wallet.activity.WalletActivity"
            android:launchMode="singleTask" />

        <activity
            android:name="com.js.shipper.ui.wallet.activity.BailActivity"
            android:launchMode="singleTop" />

        <activity
            android:name="com.js.shipper.ui.wallet.activity.RechargeActivity"
            android:launchMode="singleTop" />

        <activity
            android:name="com.js.shipper.ui.wallet.activity.WithdrawActivity"
            android:launchMode="singleTop" />

        <activity
            android:name="com.js.shipper.ui.user.activity.UserVerifiedActivity"
            android:launchMode="singleTop" />

        <activity
            android:name="com.js.shipper.ui.user.activity.ParkUserVerifiedActivity"
            android:launchMode="singleTop" />

        <activity
            android:name="com.js.shipper.ui.user.activity.DriverVerifiedActivity"
            android:launchMode="singleTop" />

        <activity
            android:name="com.js.shipper.ui.wallet.activity.BillActivity"
            android:launchMode="singleTop" />

        <activity
            android:name="com.js.shipper.ui.order.activity.OrdersActivity"
            android:launchMode="singleTop" />

        <activity
            android:name="com.js.shipper.ui.order.activity.OrderDetailActivity"
            android:launchMode="singleTop" />

        <activity
            android:name="com.js.shipper.ui.center.activity.DriversActivity"
            android:launchMode="singleTop" />

        <activity
            android:name="com.js.shipper.ui.center.activity.CarsActivity"
            android:launchMode="singleTop" />

        <activity
            android:name="com.js.shipper.ui.center.activity.AddCarActivity"
            android:launchMode="singleTop" />

        <activity android:name=".ui.ship.activity.SelectAddressActivity"
            android:launchMode="singleTop"
            />

        <activity android:name=".ui.order.activity.OrderSubmitActivity"
            android:launchMode="singleTop"
            />

    </application>

</manifest>