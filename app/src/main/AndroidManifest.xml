<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.js.shipper">


    <uses-permission android:name="android.permission.INTERNET" />

    <!--获取设备网络状态，禁用后无法获取网络状态-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--网络权限，当禁用后，无法进行检索等相关业务-->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--读取设备硬件信息，统计数据-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!--读取系统信息，包含系统版本等信息，用作统计-->
    <uses-permission android:name="com.android.launcher.permission.READ_SETTINGS" />
    <!--获取设备的网络状态，鉴权所需网络代理-->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!--允许sd卡写权限，需写入地图数据，禁用后无法显示地图-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--这个权限用于访问GPS定位-->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!--获取统计数据-->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!--使用步行AR导航，配置Camera权限-->
    <uses-permission android:name="android.permission.CAMERA" />
    <!--程序在手机屏幕关闭后后台进程仍然运行-->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name="com.js.shipper.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">


        <meta-data
            android:name="com.baidu.lbsapi.API_KEY"
            android:value="A74igKB8DlMQ8ieml7WwRl6pcEVZsCqi" />


        <activity android:name="com.js.shipper.ui.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name=".ui.main.activity.MainActivity"
            android:launchMode="singleTask"
            />

        <activity
            android:name="com.js.shipper.ui.user.activity.LoginActivity"
            android:launchMode="singleTask" />

        <activity
            android:name="com.js.shipper.ui.user.activity.RegisterActivity"
            android:launchMode="singleTop" />

        <activity
            android:name="com.js.shipper.ui.user.activity.UserCenterActivity"
            android:launchMode="singleTop" />

        <activity
            android:name="com.js.shipper.ui.wallet.activity.WalletActivity"
            android:launchMode="singleTask" />

        <activity
            android:name="com.js.shipper.ui.wallet.activity.BailActivity"
            android:launchMode="singleTop" />

        <activity
            android:name="com.js.shipper.ui.wallet.activity.RechargeActivity"
            android:launchMode="singleTop" />

        <activity
            android:name="com.js.shipper.ui.wallet.activity.WithdrawActivity"
            android:launchMode="singleTop" />

        <activity
            android:name="com.js.shipper.ui.user.activity.UserVerifiedActivity"
            android:launchMode="singleTop" />

        <activity
            android:name="com.js.shipper.ui.user.activity.ParkUserVerifiedActivity"
            android:launchMode="singleTop" />

        <activity
            android:name="com.js.shipper.ui.user.activity.DriverVerifiedActivity"
            android:launchMode="singleTop" />

        <activity
            android:name="com.js.shipper.ui.wallet.activity.BillActivity"
            android:launchMode="singleTop" />

        <activity
            android:name="com.js.shipper.ui.order.activity.OrdersActivity"
            android:launchMode="singleTop" />

        <activity
            android:name="com.js.shipper.ui.order.activity.OrderDetailActivity"
            android:launchMode="singleTop" />

        <activity
            android:name="com.js.shipper.ui.center.activity.DriversActivity"
            android:launchMode="singleTop" />

        <activity
            android:name="com.js.shipper.ui.center.activity.CarsActivity"
            android:launchMode="singleTop" />

        <activity
            android:name="com.js.shipper.ui.center.activity.AddCarActivity"
            android:launchMode="singleTop" />

        <activity
            android:name=".ui.ship.activity.SelectAddressActivity"
            android:launchMode="singleTop" />

        <activity
            android:name=".ui.order.activity.OrderSubmitActivity"
            android:launchMode="singleTop" />


        <service android:name="com.baidu.location.f"
            android:enabled="true"
            android:process=":remote"/>


    </application>

</manifest>